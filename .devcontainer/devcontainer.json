{
  "name": "Python 3.10 Codespace",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python"
      ]
    }
  },
  "postCreateCommand": "python3 -m venv procgen-env && echo 'source procgen-env/bin/activate' >> ~/.bashrc",
  "remoteUser": "vscode"
}